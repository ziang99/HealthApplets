/* pages/index/index.wxss */
page{
  background-color: #e6fffc;
}

.swiperBox{
  position: relative;
}
.swiperBox swiper{
  width: 100%;
  height: 350rpx;
}
.swiperImage{
  display: block;
  width: 100%;
}
.notice{
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}
.van-notice-bar{
  height: 70rpx !important;
  background-color: rgba(0, 0, 0, 0.4) !important;
}

.navBox{
  background-color: #fff;
  border-radius: 30rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 94%;
  height: 180rpx;
  margin: 0 auto;
  margin-top: 24rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.navBox view{
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}
.navImage{
  display: block;
  width: 98rpx;
	height: 98rpx;
  border-radius: 30rpx;
}
.navBox view text{
  font-size: 28rpx;
  margin-top: 16rpx;
  font-weight: bold;
}

.listContent{
  background-color: #fff;
  border-radius: 30rpx;
  width: 94%;
  margin: 0 auto;
  margin-top: 24rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.plateBox{
  display: flex;
  flex-flow: column nowrap;
  margin-bottom: 20rpx;
}
.titleBox{
  border-bottom: #999 solid 1rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
  box-sizing: border-box;
}
.title{
  font-size: 30rpx;
  font-weight: bold;
}
.more{
  font-size: 28rpx;
  color: #0bc97d;
}
.listBox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.listBox image{
  display: block;
  width: 296rpx;
	height: 208rpx;
  border-radius: 30rpx;
}
.listBox text{
  font-size: 26rpx;
  width: 342rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
  overflow: hidden;
}
