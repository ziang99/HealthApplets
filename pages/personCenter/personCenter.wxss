/* pages/personCenter/personCenter.wxss */
page{
  background-color: #e6fffc;
}
.userBg {
  width: 100%;
  height: 350rpx;
  background:linear-gradient(#17d6a0,#25bcc5);
  position: relative;
  z-index: -1;
}
.user {
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}
.addhead{
  display: block;
  width: 110rpx;
  height: 110rpx;
  color: #999;
}
.headimage {
  display: block;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 14rpx;
}
.userName {
  color: #fff;
  font-size: 32rpx;
}

.option {
  width: 90%;
  margin: -30rpx auto 0 auto;
  height: 500rpx;
  box-shadow: 0 0 10px 2px #ddd;
  background: #fff;
}

.option_s {
  width: 95%;
  margin: 0 20rpx;
  border-bottom: 1px solid #eee;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.option_s icon {
  color: #24bcc8;
}

.option_s view {
  display: flex;
  align-items: center;
}
.lefticon{
  color: #24bcc8;
  margin-right: 20rpx;
}
.text{
  font-size: 30rpx;
}

